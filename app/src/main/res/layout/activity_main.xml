<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.willard.william.mathemaniacs.MainActivity">

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="backButtonPressed"
        android:id="@+id/backMainButton" />

    <TextView
        android:text="Game Modes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/backMainButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:id="@+id/gameModesText" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gameModesText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp">

        <Button
            android:text="Basic Multiplication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/basicMultiplyButton"
            android:onClick="basicMultiplyButtonPressed"/>

        <Button
            android:text="Advanced Multiplication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/advancedMultiplyButton"
            android:onClick="advancedMultiplyButtonPressed"/>

        <Button
            android:text="Expert Multiplication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expertMultiplyButton"
            android:onClick="expertMultiplyButtonPressed"/>

        <Button
            android:text="Squares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/squaresButton"
            android:onClick="squaresButtonPressed"/>

        <Button
            android:text="Modulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/moduloButton"
            android:onClick="moduloButtonPressed"/>

        <Button
            android:text="Factorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/factorialButton"
            android:onClick="factorialButtonPressed"/>
    </LinearLayout>
</RelativeLayout>
